<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E4E3">


    <LinearLayout
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#E1E4E3"
        android:orientation="horizontal"
        android:weightSum="16">


        <TextView
            android:id="@+id/textCompras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:layout_weight="13"
            android:gravity="start"
            android:text="ENG ESP"
            android:textColor="#5A5757"
            android:textSize="15sp"
            android:textStyle="bold"

            />

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_weight="2"
            android:contentDescription="Cerrar"
            android:src="@drawable/baseline_highlight_off_24"
            tools:ignore="TouchTargetSizeCheck" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/panel">


        <ImageView
            android:id="@+id/imgTienda"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:background="@drawable/splashofertapp"

            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logo"
        android:layout_marginTop="0dp"
        android:gravity="center|top"
        android:orientation="vertical">


        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="9dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="number"
            android:minHeight="48dp"
            android:paddingLeft="15dp"
            android:singleLine="false"
            android:text="NÂº de Tarjeta "

            android:textColor="#6A6F7D"
            android:textSize="18sp"
            tools:ignore="TextContrastCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <EditText
                android:id="@+id/editTextMMAA"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:minHeight="48dp"
                android:text="MM/AA "
                android:textSize="18sp"
                android:background="#FFFFFF"
                android:textColor="#6A6F7D"
                android:textColorHighlight="#CFCFCF"
                android:textColorHint="#6A6F7D"
                android:textColorLink="#2DDA93"
                tools:ignore="TextContrastCheck"
                android:layout_marginBottom="9dp"
                android:layout_marginEnd="3dp"
                android:paddingLeft="15dp"
                />

            <EditText
                android:id="@+id/editTextCVV"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:minHeight="48dp"
                android:text="CVV "
                android:textSize="18sp"
                android:background="#FFFFFF"
                android:textColor="#6A6F7D"
                android:textColorHighlight="#CFCFCF"
                android:textColorHint="#6A6F7D"
                android:textColorLink="#2DDA93"
                tools:ignore="TextContrastCheck"
                android:layout_marginBottom="9dp"
                android:layout_marginStart="3dp"
                android:paddingLeft="15dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <EditText
                android:id="@+id/editTextNombre"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:minHeight="48dp"
                android:text="Nombre "
                android:textSize="18sp"
                android:background="#FFFFFF"
                android:textColor="#6A6F7D"
                android:textColorHighlight="#CFCFCF"
                android:textColorHint="#6A6F7D"
                android:textColorLink="#2DDA93"
                tools:ignore="TextContrastCheck"
                android:layout_marginBottom="9dp"
                android:layout_marginEnd="3dp"
                android:paddingLeft="15dp"
                />

            <EditText
                android:id="@+id/TextApellido"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:minHeight="48dp"
                android:text="Apellido "
                android:textSize="18sp"
                android:background="#FFFFFF"
                android:textColor="#6A6F7D"
                android:textColorHighlight="#CFCFCF"
                android:textColorHint="#6A6F7D"
                android:textColorLink="#2DDA93"
                tools:ignore="TextContrastCheck"
                android:layout_marginBottom="9dp"
                android:layout_marginStart="3dp"
                android:paddingLeft="15dp"
                />


        </LinearLayout>

        <EditText
            android:id="@+id/TextEmail"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:minHeight="48dp"
            android:text="Email "
            android:textSize="18sp"
            android:background="#FFFFFF"
            android:textColor="#6A6F7D"
            android:textColorHighlight="#CFCFCF"
            android:textColorHint="#6A6F7D"
            android:textColorLink="#2DDA93"
            tools:ignore="TextContrastCheck"
            android:layout_margin="1dp"
            android:paddingLeft="15dp"
            />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/buttonPagar"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:clickable="true"
            android:contentDescription="Pagando"
            android:text="Completar Pago"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold"

            app:backgroundTint="#2DDA93" />


    </LinearLayout>


</RelativeLayout>